{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "adblocker",
  "version": "1.0.0",
  "main": "dist/background.js",
  "scripts": {
    "build": "npm run update-rules && webpack --config webpack.config.js",
    "watch": "webpack --config webpack.config.js --watch",
    "lint": "eslint --ext .ts,.tsx src/",
    "lint:fix": "eslint --ext .ts,.tsx src/ --fix",
    "test": "jest",
    "update-rules": "python scripts/rules.py --output public/rules.json --custom custom-filters.txt"
  },
  "keywords": [
    "adblocker",
    "chrome-extension",
    "typescript"
  ],
  "dependencies": {
    "@cliqz/adblocker-webextension": "^1.34.0",
    "@ghostery/adblocker": "^2.5.2",
    "@types/chrome": "^0.0.321",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.3",
    "@types/react-dom": "^19.1.3",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "copy-webpack-plugin": "^13.0.0",
    "cross-fetch": "^4.1.0",
    "css-loader": "^7.1.2",
    "eslint": "^9.26.0",
    "eslint-plugin-react": "^7.37.5",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^29.7.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.3.2",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.8",
    "webpack-cli": "^6.0.1"
  }
}
